<application>
<name>CFScripter</name>
<author>Terrence Ryan</author>
<version>0.1</version>
<email>terry.ryan@adobe.com</email>	
<description>Replaces CFML with CFscript equivalents</description>
<license>Download this for free before the economic craptaculon forces me to charge for it. </license>	
	
	<menucontributions >
		<!-- Add menu contributions to RDS Data View -->	   
	   	<contribution target="editor">
			<menu name="CFScripter">
	    		<action name="Detag" handlerid="descript" showResponse="true" />
				<action name="Wrap in CFScript" handlerid="wrapincfscript" showResponse="true" />
			</menu>
		</contribution>
	</menucontributions >

	<!-- Define Handlers-->
	<handlers>		
		<handler id="descript" type="CFM" filename="descript.cfm" />
		<handler id="wrapincfscript" type="CFM" filename="wrapincfscript.cfm" />
	</handlers>

</application>